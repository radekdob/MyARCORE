<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <fragment android:name="com.google.ar.sceneform.ux.ArFragment"
              android:id="@+id/ux_fragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="0dp"/>
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar"
                                       android:layout_width="match_parent"
                                       android:layout_height="?attr/actionBarSize"
                                       android:background="@null"
                                       app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                                       app:popupTheme="@style/MyDarkToolbarStyle"/>

    <HorizontalScrollView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="bottom"
    >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
        >


            <ImageView android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:id="@+id/soldier_image"
                       android:src="@drawable/rosomak"
                       android:padding="10dp"
                       android:scaleType="fitXY"
            />
            <ImageView android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:id="@+id/uh_image"
                       android:src="@drawable/uh60"
                       android:padding="10dp"
                       android:scaleType="fitXY"
            />
            <ImageView android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:id="@+id/tank_image"
                       android:src="@drawable/tank"
                       android:padding="10dp"
                       android:scaleType="fitXY"
            />
            <ImageView android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:id="@+id/andy_image"
                       android:src="@drawable/andy"
                       android:padding="10dp"
                       android:scaleType="fitXY"
            />

        </LinearLayout>


    </HorizontalScrollView>
    <Button android:layout_width="45dp"
            android:layout_gravity="center|start"
            android:layout_height="45dp"
    android:id="@+id/btnLine"/>
</FrameLayout>

